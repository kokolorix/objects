{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "LLDB Launch",
            "program": "${workspaceRoot}/bin/${workspaceRootFolderName}.exe",
            "args": [],
            "cwd": "${workspaceRoot}"
        },
        {
            "type": "PowerShell",
            "request": "launch",
            "name": "PowerShell Launch Current File",
            "script": "${file}",
            "args": [],
            "cwd": "${file}"
        },
        {
            "name": "C++ Launch (Windows)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/bin/${workspaceRootFolderName}.exe",
            "args": [
                "0.0.0.0",
                "80",
                "."
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}",
            "environment": [],
            "externalConsole": true,
            "miDebuggerPath": "C:/Program Files (x86)/CodeBlocks/MinGW/bin/gdb.exe"
        },
        {
            "name": "C++ Attach (Windows)",
            "type": "cppdbg",
            "request": "attach",
            "processId": "${command:pickProcess}",
            "program": "${workspaceRoot}/bin/${workspaceRootFolderName}.exe"
        }
    ]
}